{
  "name": "치직치지직",
  "version": "1.1",
  "description": "치지직을 더 유용하게!",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "https://chzzk.naver.com/live/*/chat?ext",
        "https://*.chzzk.naver.com/live/*/chat?ext"
      ],
      "js": ["injecter.js"]
    },
    {
      "matches": [
        "https://chzzk.naver.com/live/*",
        "https://*.chzzk.naver.com/live/*"
      ],
      "js": ["open.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/logo16.png",
    "48": "assets/logo48.png",
    "64": "assets/logo64.png",
    "128": "assets/logo128.png",
    "256": "assets/logo256.png",
    "512": "assets/logo512.png"
  },
  "permissions": ["declarativeNetRequest", "storage"],
  "host_permissions": ["*://*.chzzk.naver.com/*", "*://chzzk.naver.com/*"],
  "background": {
    "service_worker": "background.js"
  }
}
